<?xml version="1.0" encoding="utf-8"?>
<!---Renderer for the items that belong to a layer in the Legend component. This renderer shows the information about each feature, e.g. caption and a symbol.@see wcmc.components.Legend @see wcmc.classes.LayerLegend @see wcmc.classes.LayerLegendItem @see wcmc.renderers.LayerLegendRenderer-->
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"> 
	<s:HGroup verticalAlign="middle">
		<mx:Image source="{data.image}"/>
		<s:Label text="{data.caption}"/>
	</s:HGroup>
</s:ItemRenderer>
